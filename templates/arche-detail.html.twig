{% set moduleDir = "{{ arche_core_gui_path }}" %}
<input type="hidden" value="{{ identifier }}" id="resId"/>
<input type="hidden" value="{{ data.getRootID() }}" id="rootId"/>
<input type="hidden" value="{{ data.getTitle() }}" id="resource-main-title"/>
<input type="hidden" value="{{ data.getAcdhType()|lower }}" id="resource-type"/>


{% if data.getAcdhType()|lower == 'place' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/place-block.html.twig', {'data': data } ) }}
{% elseif data.getAcdhType()|lower == 'person' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/person-block.html.twig', {'data': data } ) }}
{% elseif data.getAcdhType()|lower == 'organisation' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/organisation-block.html.twig', {'data': data } ) }}
{% elseif data.getAcdhType()|lower == 'publication' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/publication-block.html.twig', {'data': data } ) }}
{% elseif data.getAcdhType()|lower == 'project' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/project-block.html.twig', {'data': data } ) }}
{% elseif data.getAcdhType()|lower == 'concept' %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/concept-block.html.twig', {'data': data } ) }}
{% else %}
    {{ include(arche_core_gui_path ~ '/templates/metadata/basic-block.html.twig', {'data': data } ) }}
{% endif %}


