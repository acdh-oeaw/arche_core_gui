{% if language == 'en' %}
    {% set enActive = true %}
{% elseif language == 'de' %}
    {% set deActive = true %}
{% endif %}    
<div>
    <p class="mobile-lng-switcher-title">{{ "Language"|trans }}</p>
    <ul class="nav navbar-nav nav-lang">
        <li class="lng-switcher">
            <a href="" class="language-switcher-language-session-arche" data-lang="en">
                {% if language == 'en' %}
                    <span class="navbar-icons-text active-lng-btn">EN</span>
                {% else %}
                    <span class="navbar-icons-text">EN</span>
                {% endif %}                   
                
            </a> &nbsp;
        </li>
        <li class="lng-switcher">
            <a href="" class="language-switcher-language-session-arche" data-lang="de">
                {% if language == 'de' %}
                    <span class="navbar-icons-text active-lng-btn">DE</span>
                {% else %}
                    <span class="navbar-icons-text">DE</span>
                {% endif %}                   
                
            </a>
        </li>
    </ul>
</div>
