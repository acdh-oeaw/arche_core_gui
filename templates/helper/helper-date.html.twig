{% if value.value|first|lower == "-" %}
    {% set nd = value.value|split('-', 2) %}
    {% if nd[1] is not empty %}
        {% set ndf = nd[1]|archeTranslateDateFilter(dateformat) %}
        {% if ndf is not empty %}
            -{{ ndf }}
        {% endif %}
    {% endif %}
{% else %}
    {{ value.value|archeTranslateDateFilter(dateformat) }}
{% endif %}
