<input type="hidden" id="resourceHasVersion" value="true"/>
<div class="card metadata">
    <div class="card-header">
        <div class="row justify-content-center align-items-center">
            <div class="col-10"><h4 class="mb-0 pb-0">{{ "Versions"|trans }}</h4></div>
            <!-- <div class="col-2"><img src="{{arche_tooltip_ico}}" class="tooltip-icon-cards"></div> -->
            <div class="col-2 text-end">
                <a class="btn btn-link mdr-card-collapse-btn" data-bs-toggle="collapse" data-bs-target="#versionsBody">
                    <i class="fa fa-solid fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div id="versionsBody" class="collapse show">
        <div class="card-body meta-sidebar versions-body">
            <div class="versions-properties">
                {% if data.getData('acdh:isNewVersionOf') %}
                    {{ include(arche_core_gui_path ~ '/templates/helper/helper-displayFields.html.twig', 
                    {'data': data.getData('acdh:isNewVersionOf'), 'label':  'New Version Of' } ) }}
                {% endif %}
                
                {% if data.getData('acdh:hasVersionInfo') %}
                    {{ include(arche_core_gui_path ~ '/templates/helper/helper-displayFields.html.twig', 
                    {'data': data.getData('acdh:hasVersionInfo'), 'label':  'Version' } ) }}
                {% endif %}

            </div>
            <div class="versions-tree-div">
                <div id="versions-tree" class="versions-tree-view-container"></div>
            </div>

            <div class="versions-list-div">
                <div id="versions-list" class="versions-list-container"></div>
            </div>


        </div>
    </div>
</div>