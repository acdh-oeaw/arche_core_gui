{% set moduleDir = "{{ arche_core_gui_path }}" %}

<div class="container">
    <div class="row">
        <div class="col-lg-12 metadata-breadcrumb" >
            HOME / COllection / SubCollection
        </div>

    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-3 discover-left" >
            {{ include(arche_core_gui_path ~ '/templates/blocks/discover-smart-search.html.twig', {'data': data } ) }}

        </div>

        <div class="col-lg-9 discover-main " >

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 d-flex">
                        <div class="col-2">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="prefLangDropDown" data-bs-toggle="dropdown" aria-expanded="false">
                                    Dropdown button
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="prefLangDropDown">
                                    <li><a class="dropdown-item" href="#">{{ "English"|trans }}</a></li>
                                    <li><a class="dropdown-item" href="#">{{ "German"|trans }}</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-2">
                            <a class="ms-auto d-flex btn btn-root-topbar-grey btn-root-topbar-grey-text" href="#" id="fulltextSearchBtn">{{ "Full text Search"|trans }}</a> 
                            <img src="{{arche_tooltip_ico}}" class="tooltip-icon">
                        </div> 
                        <div class="col-2">
                            <a class="ms-auto d-flex btn btn-root-topbar-grey btn-root-topbar-grey-text" href="#" id="followEntitiesBtn">{{ "Follow entities"|trans }}</a> 
                            <img src="{{arche_tooltip_ico}}" class="tooltip-icon">
                        </div>
                        <div class="col-6">
                            <a class="ms-auto d-flex btn btn-arche-blue" href="#" id="mapView">{{ "Map"|trans }}</a> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid basic-content-div">


                <div class="row">
                    <div class="col-lg-12 ">
                        38 Result(s) - pagination - dropdown
                        <hr style="color:#e1edf3;">
                    </div>

                </div>

                <div class="row">
                    <div class="container">
                        <div class="row">

                            <table class="root-table table row-border" cellspacing="0" width="100%" id='rootDT'>

                                <tbody>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</div>
