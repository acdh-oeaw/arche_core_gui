{% set moduleDir = "{{ arche_core_gui_path }}" %}
{{ attach_library('arche_core_gui/smart-search') }}
<div class="container">
    <div class="row">
        <div class="col-lg-12 metadata-breadcrumb" >

        </div>

    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-3 discover-left" >
            {{ include(arche_core_gui_path ~ '/templates/blocks/discover-smart-search.html.twig', {'data': data } ) }}
        </div>

        <div class="col-lg-9 discover-main " >

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 d-flex discover-top">
                        <div class="col-9 discover-top-toolbar">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle discover-dropdown-btn" type="button" id="prefLangDropDown" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ "Preferred Language"|trans  }}
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="prefLangDropDown">
                                    <li><a class="dropdown-item" href="#">{{ "English"|trans }}</a></li>
                                    <li><a class="dropdown-item" href="#">{{ "German"|trans }}</a></li>
                                </ul>
                            </div>
                            <input class="smartsearch-btn ms-auto d-flex btn btn-root-topbar-grey btn-root-topbar-grey-text" data-drupal-selector="edit-submit" type="submit" id="edit-submit" name="op" value="{{ "Full text Search"|trans }}">

                            <img src="{{arche_tooltip_ico}}" class="tooltip-icon">

                            <a class="ms-auto d-flex btn btn-root-topbar-grey btn-root-topbar-grey-text" href="#" id="followEntitiesBtn">{{ "Follow entities"|trans }}</a> 
                            <img src="{{arche_tooltip_ico}}" class="tooltip-icon">
                        </div>
                        <div class="col-3">
                            <button type="button" class="ms-auto d-flex btn btn-arche-blue" id="mapToggleBtn">{{ "Map"|trans }}</button>
                            <div class="arche-sms-popup"  id="mapContainer" style="display: none;">
                                {{ include(arche_core_gui_path ~ '/templates/smartsearch/map.html.twig' ) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid basic-content-div discover-content-main">

                <div class="row">
                    <div id="block-mainpagesearchtools" class="col-block col-lg-9 col-md-8 col-sm-12">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 arche-smartsearch-page-div" style="display: none;">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-outline">        
                                                <label class="mx-2 font-weight-bold" for="pageSize">{{ "Page size"|trans }}:</label>
                                                <input class="form-control  mr-sm-2 w-100" type="number" value="10" min="1" id="smartPageSize"/>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-outline">
                                                <label class="mx-2 font-weight-bold" for="page">{{ "Page"|trans }}:</label>
                                                <div class="input-group  mr-sm-2 w-100">
                                                    <select class="form-control" id="smartPage" onchange="search();">
                                                        <option value="0" selected="selected">1</option>
                                                    </select>
                                                    <div class="input-group-append">
                                                        <div class="input-group-text" id="pageCount">/ 1</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
                <div class="row main-content-row">
                    <table class="root-table table row-border" cellspacing="0" width="100%" id='rootDT'>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
